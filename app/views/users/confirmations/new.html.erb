<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-signin' }) do |f| %>
  <h2 class="form-signin-heading">Resend confirmation instructions</h2>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class: 'form-control' %></div>

  <div><%= f.submit "Resend confirmation instructions", class: "btn btn-lg btn-primary btn-block" %></div>
  <br>
  <%= render "users/shared/links" %>
<% end %>

