<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-signin" }) do |f| %>
  <h2 class="form-signin-heading">Change your password</h2>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "New password" %><br />
  <%= f.password_field :password, :autofocus => true, class: "form-control" %></div>

  <div><%= f.label :password_confirmation, "Confirm new password" %><br />
  <%= f.password_field :password_confirmation, class: "form-control" %></div>

  <div><%= f.submit "Change my password", class: "btn btn-lg btn-primary btn-block" %></div>
  <br>
  <%= render "users/shared/links" %>
<% end %>

